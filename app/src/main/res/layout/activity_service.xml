<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".component.service.ServiceActivity">


    <Button
            android:text="startService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="25dp"
            tools:layout_editor_absoluteX="16dp" android:id="@+id/startService"/>
    <Button
            android:text="stopService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="25dp"
            tools:layout_editor_absoluteX="213dp" android:id="@+id/stopService"/>
    <Button
            android:text="bindService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="25dp"
            tools:layout_editor_absoluteX="213dp" android:id="@+id/bindService"/>
    <Button
            android:text="unBindService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="25dp"
            tools:layout_editor_absoluteX="213dp" android:id="@+id/unBindService"/>
</LinearLayout>